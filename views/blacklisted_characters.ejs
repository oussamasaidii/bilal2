<%- include('partials/header_fortnite') %>

    <main>
        <h1>Geblackliste personages</h1>
        <article class="search-container">
            <input type="text" id="search" placeholder="Zoeken..." name="search">
            <button type="submit">
                <img src="./assets/Images/SearchIcon-SB.png" alt="Search Icon">
            </button>
        </article>
        <article class="blacklist-container">
            <article class="blacklist-character" id="blacklist-container">
                <a href="blacklist_detail">
                    <img src="./assets/Images/Skin7.jpg" alt="Character 1">
                    <p><a href="blacklist_detail">Character 1</a></p>
                </a>
            </article>
            <article class="blacklist-character" id="blacklist-container">
                <a href="blacklist_detail">
                    <img src="./assets/Images/Skin8.jpg" alt="Character 2">
                    <p><a href="blacklist_detail">Character 2</a></p>
                </a>
            </article>
            <article class="blacklist-character" id="blacklist-container">
                <a href="blacklist_detail">
                    <img src="./assets/Images/Skin9.jpg" alt="Character 3">
                    <p><a href="blacklist_detail">Character 3</a></p>
                </a>
            </article>
        </article>
    </main>

    <%- include('partials/footer') %>

        <script>
            document.getElementById('search').addEventListener('input', function (e) {
                var searchValue = e.target.value.trim().toLowerCase();
                var characters = document.querySelectorAll('.blacklist-character');
                characters.forEach(function (character) {
                    var name = character.querySelector('p').textContent.trim().toLowerCase();
                    if (name.includes(searchValue)) {
                        character.style.display = 'block';
                    } else {
                        character.style.display = 'none';
                    }
                });
            });
        </script>